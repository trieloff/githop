# force tmux to use utf-8
#setw -gq utf8 on

# turn on mouse mode
setw -g mouse on
bind -n WheelUpPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "if -Ft= '#{pane_in_mode}' 'send-keys -M' 'copy-mode -e'"
bind -n WheelDownPane select-pane -t= \; send-keys -M


# window status
setw -g window-status-format "#[fg=colour243]#[bg=black] #I #[bg=colour228]#[fg=colour8] #W"
setw -g window-status-current-format "#[bg=white]#[fg=colour235] #I #[fg=colour233]#[bg=colour208] #W"

#setw -g window-status-current-bg colour0
#setw -g window-status-current-fg colour11
#setw -g window-status-current-attr dim
#setw -g window-status-bg green
#setw -g window-status-fg black
#setw -g window-status-attr reverse

# Info on left (I don't have a session display for now)
set -g status-left ' '
#set -g status-right "ğŸ³"

# loud or quiet?
set-option -g visual-activity off
set-option -g visual-bell off
set-option -g visual-silence off
set-window-option -g monitor-activity off
set-option -g bell-action none

set -g default-terminal "xterm-256color"

# update status once a minute
set-option -g status-interval 60

set -g status-right "ğŸ³  node #(cistatus #{simple_git_status})"


# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'

set -g @plugin 'kristijanhusak/tmux-simple-git-status'
#set -g status-left "#{simple_git_status}"

set -g @plugin 'odedlaz/tmux-onedark-theme'
set -g @plugin 'tmux-plugins/tmux-sidebar'

set -g @onedark_widgets "#(cistatus) #{simple_git_status} ğŸ³  node"

# Other examples:
# set -g @plugin 'github_username/plugin_name'
# set -g @plugin 'git@github.com/user/plugin'
# set -g @plugin 'git@bitbucket.com/user/plugin'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run -b '~/.tmux/plugins/tpm/tpm'